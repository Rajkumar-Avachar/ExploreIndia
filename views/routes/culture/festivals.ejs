            <div class="content" id="islamContent" style="display: none;">
                <p>Islam</p>
            </div>
            <div class="content" id="christanContent" style="display: none;">
                <p>Christan</p>
            </div>
        </div>





        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $("#hinduOption").click(function () {
                $(".content").hide();
                $("#hinduContent").show();
            });
            $("#islamOption").click(function () {
                $(".content").hide();
                $("#islamContent").show();
            });
            $("#christanOption").click(function () {
                $(".content").hide();
                $("#christanContent").show();
            });
        </script>


    </body>