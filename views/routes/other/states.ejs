<% layout("/layouts/boilerplate") %>



    <body>

        <h3 class="mainHeading">States and Union Territories of India</h3>


        <main class="statesUTs">
            <p class="shortIntro">
                India is a federal union comprising 28 states and 8 union territories. Here's a list of all the
                states and union territories along with their capitals:
            </p>

            <div id="statesGrid" class="grid">
                <!-- States and UTs will be dynamically inserted here -->
            </div>
        </main>


        <script>
            const indiaStates = [
                { name: "Andhra Pradesh", capital: "Amaravati", link: "https://www.ap.gov.in/" },
                { name: "Arunachal Pradesh", capital: "Itanagar", link: "https://arunachalpradesh.gov.in/" },
                { name: "Assam", capital: "Dispur", link: "https://assam.gov.in/" },
                { name: "Bihar", capital: "Patna", link: "http://state.bihar.gov.in/" },
                { name: "Chhattisgarh", capital: "Raipur", link: "https://cgstate.gov.in/" },
                { name: "Goa", capital: "Panaji", link: "https://www.goa.gov.in/" },
                { name: "Gujarat", capital: "Gandhinagar", link: "https://gujaratindia.gov.in/" },
                { name: "Haryana", capital: "Chandigarh", link: "https://haryana.gov.in/" },
                { name: "Himachal Pradesh", capital: "Shimla", link: "https://himachal.nic.in/" },
                { name: "Jharkhand", capital: "Ranchi", link: "https://www.jharkhand.gov.in/" },
                { name: "Karnataka", capital: "Bengaluru", link: "https://www.karnataka.gov.in/" },
                { name: "Kerala", capital: "Thiruvananthapuram", link: "https://kerala.gov.in/" },
                { name: "Madhya Pradesh", capital: "Bhopal", link: "https://www.mp.gov.in/" },
                { name: "Maharashtra", capital: "Mumbai", link: "https://www.maharashtra.gov.in/" },
                { name: "Manipur", capital: "Imphal", link: "https://manipur.gov.in/" },
                { name: "Meghalaya", capital: "Shillong", link: "https://meghalaya.gov.in/" },
                { name: "Mizoram", capital: "Aizawl", link: "https://mizoram.gov.in/" },
                { name: "Nagaland", capital: "Kohima", link: "https://nagaland.gov.in/" },
                { name: "Odisha", capital: "Bhubaneswar", link: "https://www.odisha.gov.in/" },
                { name: "Punjab", capital: "Chandigarh", link: "https://punjab.gov.in/" },
                { name: "Rajasthan", capital: "Jaipur", link: "https://www.rajasthan.gov.in/" },
                { name: "Sikkim", capital: "Gangtok", link: "https://sikkim.gov.in/" },
                { name: "Tamil Nadu", capital: "Chennai", link: "https://www.tn.gov.in/" },
                { name: "Telangana", capital: "Hyderabad", link: "https://www.telangana.gov.in/" },
                { name: "Tripura", capital: "Agartala", link: "https://tripura.gov.in/" },
                { name: "Uttar Pradesh", capital: "Lucknow", link: "https://up.gov.in/" },
                { name: "Uttarakhand", capital: "Dehradun", link: "https://uk.gov.in/" },
                { name: "West Bengal", capital: "Kolkata", link: "https://wb.gov.in/" },
                { name: "Andaman and Nicobar Islands", capital: "Port Blair", type: "Union Territory", link: "http://www.andaman.gov.in/" },
                { name: "Chandigarh", capital: "Chandigarh", type: "Union Territory", link: "http://chandigarh.gov.in/" },
                { name: "Dadra and Nagar Haveli and Daman and Diu", capital: "Daman", type: "Union Territory", link: "https://daman.nic.in/" },
                { name: "Delhi", capital: "New Delhi", type: "Union Territory", link: "https://delhi.gov.in/" },
                { name: "Jammu and Kashmir", capital: "Srinagar (Summer), Jammu (Winter)", type: "Union Territory", link: "https://www.jk.gov.in/" },
                { name: "Ladakh", capital: "Leh", type: "Union Territory", link: "https://ladakh.nic.in/" },
                { name: "Lakshadweep", capital: "Kavaratti", type: "Union Territory", link: "https://lakshadweep.gov.in/" },
                { name: "Puducherry", capital: "Puducherry", type: "Union Territory", link: "https://www.py.gov.in/" }
            ];

            function createStateCard(state) {
                const card = document.createElement('div');
                card.className = 'stateCard';
                card.innerHTML = `
                    <h2>${state.name}</h2>
                    <p><strong>Capital:</strong> ${state.capital}</p>
                    ${state.type ? `<p class="type">${state.type}</p>` : ''}
                    <a href="${state.link}" target="_blank" class="official-link mt-3 text-center btn btn-outline-danger">Visit Portal</a>
                `;
                return card;
            }

            function populateStates() {
                const grid = document.getElementById('statesGrid');
                indiaStates.forEach(state => {
                    grid.appendChild(createStateCard(state));
                });
            }

            function setCurrentYear() {
                const yearSpan = document.getElementById('currentYear');
                yearSpan.textContent = new Date().getFullYear();
            }

            document.addEventListener('DOMContentLoaded', () => {
                populateStates();
                setCurrentYear();
            });
        </script>

    </body>