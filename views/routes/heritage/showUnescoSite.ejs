<% layout("/layouts/boilerplate") %>

    <body>

        <h2 class="mainTitle">
            <%= unescosite.title %>
        </h2>

        <div class="maindiv">
            <div id="tabs">
                <ul class="nav nav-tabs">
                    <li class="nav-item" id="desc">
                        <a class="nav-link" aria-current="page" href="#">Description</a>
                    </li>
                    <li class="nav-item" id="gall">
                        <a class="nav-link" href="#">Gallery</a>
                    </li>
                    <li class="nav-item" id="vid">
                        <a class="nav-link" href="#">Video</a>
                    </li>
                </ul>
            </div>

            <section class="Content" id="description">

                <h5>
                    <b>
                        <%= unescosite.title %>
                    </b>
                </h5>

                <div class="description">
                    <p class="info">
                        <% for(description of unescosite.description) { %>
                            <%=description%>
                                <br><br>
                                <% } %>
                    </p>

                    <aside class=".aside">
                        <div class="image">
                            <img src="<%=unescosite.image[0]%>" width="500" alt="AjanthaCaves">
                        </div>
                        <div class="generalInfo">
                            <div class="country">
                                <img src="https://image.similarpng.com/very-thumbnail/2020/06/India-flag-icon-on-transparent-background-PNG.png"
                                    width="50" alt="">
                                <h5><b>INDIA</b></h5>
                            </div>

                            <br>

                            <p><b>Year of Inscription:</b>&nbsp;<%=unescosite.yearOfInscription%>
                            </p>
                            <p><b>UNESCO Site id:</b>&nbsp;<%=unescosite.siteId%>
                            </p>
                            <p><b>Location:</b>&nbsp;<%=unescosite.location%>.</p>
                        </div>
                    </aside>
                </div>


            </section>

            <section class="Content" id="gallery">
                <% for(image of unescosite.image) { %>
                    <img src="<%=image%>" alt="AjanthaCaves">
                    <% } %>
            </section>

            <section class="Content" id="video">

                <iframe width="700" height="400" src="<%=unescosite.video%>?autoplay=1" title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>

            </section>

            <hr>
        </div>

        <script>
            $(".Content").hide();
            $("#description").show();
            $("#desc").click(function () {
                $(".Content").hide();
                $("#description").show();
            });
            $("#gall").click(function () {
                $(".Content").hide();
                $("#gallery").show();
            });
            $("#vid").click(function () {
                $(".Content").hide();
                $("#video").show();
            });
        </script>


    </body>