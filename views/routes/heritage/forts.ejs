            function displayFortList() {
                const fortList = document.getElementById('fort-list');
                forts.forEach(fort => {
                    const fortItem = document.createElement('div');
                    fortItem.classList.add('fort-item');
                    fortItem.textContent = fort.name;
                    fortItem.addEventListener('click', () => displayFortDetails(fort));
                    fortList.appendChild(fortItem);
                });
            }

            function displayFortDetails(fort) {
                const fortDetails = document.getElementById('fort-details');
                fortDetails.innerHTML = `
        <div class="fort-details">
            <h3>${fort.name}</h3>
            <img src="${fort.image}" alt="${fort.name}">
            <p><strong>Location:</strong> ${fort.location}</p>
            <p>${fort.description}</p>
        </div>
    `;
            }

            window.addEventListener('load', () => {
                displayFortList();
                displayFortDetails(forts[0]); // Display the first fort by default
            });
        </script>
    </body>